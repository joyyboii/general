<main>
    <div class="product-card">
        <img src="shopping2.jpeg" alt="Product 1">
        <h3>Product 1</h3>
        <p>$19.99</p>
        <button>Add to Cart</button>
    </div>
    <div class="product-card">
        <img src="https://via.placeholder.com/300x200.png?text=Product+2" alt="Product 2">
        <h3>Product 2</h3>
        <p>$29.99</p>
        <button>Add to Cart</button>
    </div>
    <div class="product-card">
        <img src="https://via.placeholder.com/300x200.png?text=Product+3" alt="Product 3">
        <h3>Product 3</h3>
        <p>$39.99</p>

            <button class="cart">ðŸ›’</button>

    <div class="cart-products">
        <h3>Cart</h3>
        <ul id="cart-list"></ul>
        <button>Checkout</button>
    </div>

    <div class="overlay"></div>

    
        <script>
        const cartBtn = document.querySelector('.cart');
        const cartList = document.getElementById('cart-list');
        const overlay = document.querySelector('.overlay');
        let cartProducts = [];

        // Function to add product to cart
        function addToCart(product) {
            cartProducts.push(product);
            renderCart();
        }

        // Function to remove product from cart
        function removeFromCart(index) {
            cartProducts.splice(index, 1);
            renderCart();
        }

        // Function to render cart
        function renderCart() {
            cartList.innerHTML = '';
            let total = 0;
            if (cartProducts.length === 0) {
                cartList.innerHTML = 'Cart is empty.';
            } else {
                cartProducts.forEach((product, index) => {
                    const li = document.createElement('li');
                    li.innerHTML = `${product.name} (${product.price})`;
                    cartList.appendChild(li);
                    total += product.price;
                    const removeBtn = document.createElement('button');
                    removeBtn.textContent = 'Remove';
                    removeBtn.addEventListener('click', () => {
                        removeFromCart(index);
                    });
                    li.appendChild(removeBtn);
                });
            }
            document.querySelector('.cart-products button').textContent = `Checkout ($${total.toFixed(2)})`;
        }

        // Function to toggle cart visibility
        function toggleCart() {
            const cartProductsEl = document.querySelector('.cart-products');
            cartProductsEl.style.display = cartProductsEl.style.display === 'none' ? 'block' : 'none';
            overlay.style.display = cartProductsEl.style.display;
        }

        // Event listeners
        cartBtn.addEventListener('click', toggleCart);
        overlay.addEventListener('click', toggleCart);

        // Add products to the cart
        const products = [
            {
                name: 'Product 1',
                price: 19.99
            },
            {
                name: 'Product 2',
                price: 29.99
            },
            {
                name: 'Product 3',
                price: 39.99
            }
        ];

        products.forEach((product) => {
            const addToCartBtn = document.querySelector(`.product-card:nth-child(${products.indexOf(product) + 1}) button`);
            addToCartBtn.addEventListener('click', () => {
                addToCart(product);
            });
        });
    

    </script>

